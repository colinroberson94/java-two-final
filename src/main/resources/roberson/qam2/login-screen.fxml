<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="250.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
   <children>
      <Label fx:id="userLocation" layoutX="14.0" layoutY="14.0" text="Location" />
      <TextField fx:id="usernameField" layoutX="94.0" layoutY="95.0" prefHeight="26.0" prefWidth="208.0" promptText="Username" />
      <PasswordField fx:id="passwordField" layoutX="95.0" layoutY="125.0" prefHeight="26.0" prefWidth="208.0" promptText="Password" />
      <MenuButton fx:id="languageSelector" layoutX="95.0" layoutY="160.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0" text="Language">
        <items>
          <MenuItem mnemonicParsing="false" text="English" />
          <MenuItem mnemonicParsing="false" text="French" />
        </items>
      </MenuButton>
      <Button fx:id="submitLoginButton" layoutX="247.0" layoutY="160.0" mnemonicParsing="false" onAction="#onActionSubmit" text="Submit" />
      <Button fx:id="cancelLoginButton" layoutX="188.0" layoutY="160.0" mnemonicParsing="false" onAction="#onActionCancel" prefHeight="26.0" prefWidth="56.0" text="Cancel" />
   </children>
</AnchorPane>
